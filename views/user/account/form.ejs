<section class="page-section" id="form">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h2 class="text-secondary text-center mb-4"><%= form.header %> </h3>
        <form
        id="editAccountForm"
        action="<%= form.action%>"
        method="<%= form.method %>"
        novalidate="novalidate"
        >
          <% form.fields.forEach(field => { %> <%- include('./form_input', {field}) %> <% }) %>
          <br />
          <div id="success"></div>
          <div class="form-group">
            <div class="row">
              <button
                type="submit"
                class="btn btn-primary btn-xl d-block mx-auto"
                id="sendFormButton"
              >
                <%= form.buttonCaption %>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
