<section class="page-section" id="form">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <form
          action="<%= form.action%>"
          method="<%= form.method %>"
          id="contactForm"
          novalidate="novalidate"
        >
          <% form.fields.forEach(field => { %> <%- include('./form_input', {field}) %> <% }) %>
          <br />
          <div id="success"></div>
          <div class="form-group">
            <button
              type="submit"
              class="btn btn-primary btn-xl d-block mx-auto"
              id="sendMessageButton"
            >
              <%= form.buttonCaption %>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
